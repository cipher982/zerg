{
  "name": "@jarvis/monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "yarn@4.5.0",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/core",
      "packages/data/local"
    ]
  },
  "scripts": {
    "test": "npm run web:test",
    "test:headed": "npm run web:test -- --headed",
    "test:debug": "npm run web:test -- --debug",
    "test:mobile": "npm run web:test -- --project=mobile",
    "web:dev": "npm run dev --workspace @jarvis/web",
    "web:test": "npm run test --workspace @jarvis/web",
    "server:dev": "npm run dev --workspace @jarvis/server",
    "native:dev": "npm run dev --workspace @jarvis/native",
    "start:test": "concurrently \"npm run server:dev\" \"npm run web:dev\" --kill-others --success first"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "concurrently": "^8.2.2"
  }
}
