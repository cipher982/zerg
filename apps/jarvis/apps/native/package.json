{
  "name": "@jarvis/native",
  "private": true,
  "version": "1.0.0",
  "description": "Jarvis Voice Agent - Native macOS App",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "package": "electron-packager . Jarvis --platform=darwin --arch=x64 --out=dist/"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^25.0.5",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.davidrose.jarvis",
    "productName": "Jarvis",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Jarvis needs microphone access for voice commands",
        "LSUIElement": true
      }
    }
  }
}
