{
  "$schema": "https://design-tokens.org/schemas/1.0/schema.json",
  "color": {
    "brand": {
      "primary": { "$type": "color", "$value": "#6366f1" },
      "primaryHover": { "$type": "color", "$value": "#4f46e5" },
      "secondary": { "$type": "color", "$value": "#818cf8" },
      "accent": { "$type": "color", "$value": "#f59e0b" }
    },
    "intent": {
      "success": { "$type": "color", "$value": "#10b981" },
      "successMuted": { "$type": "color", "$value": "rgba(16, 185, 129, 0.15)" },
      "warning": { "$type": "color", "$value": "#f59e0b" },
      "warningMuted": { "$type": "color", "$value": "rgba(245, 158, 11, 0.15)" },
      "error": { "$type": "color", "$value": "#ef4444" },
      "errorMuted": { "$type": "color", "$value": "rgba(239, 68, 68, 0.15)" }
    },
    "text": {
      "primary": { "$type": "color", "$value": "#fafafa" },
      "secondary": { "$type": "color", "$value": "#a1a1aa" },
      "muted": { "$type": "color", "$value": "#71717a" },
      "inverse": { "$type": "color", "$value": "#09090b" }
    },
    "surface": {
      "page": { "$type": "color", "$value": "#09090b" },
      "section": { "$type": "color", "$value": "#18181b" },
      "card": { "$type": "color", "$value": "#27272a" },
      "elevated": { "$type": "color", "$value": "#3f3f46" },
      "overlay": { "$type": "color", "$value": "rgba(250, 250, 250, 0.03)" },
      "primary": { "$type": "color", "$value": "#27272a" },
      "secondary": { "$type": "color", "$value": "#18181b" },
      "tertiary": { "$type": "color", "$value": "#3f3f46" }
    },
    "border": {
      "primary": { "$type": "color", "$value": "#3f3f46" },
      "subtle": { "$type": "color", "$value": "#27272a" },
      "muted": { "$type": "color", "$value": "rgba(250, 250, 250, 0.08)" }
    },
    "legacy": {
      "bgDark": { "$type": "color", "$value": "#18181b" },
      "bgDarker": { "$type": "color", "$value": "#09090b" },
      "bgHover": { "$type": "color", "$value": "#27272a" },
      "bgButton": { "$type": "color", "$value": "#27272a" },
      "bgButtonHover": { "$type": "color", "$value": "#3f3f46" }
    }
  },
  "font": {
    "family": {
      "display": {
        "$type": "fontFamily",
        "$value": "'General Sans', 'Inter', -apple-system, BlinkMacSystemFont, sans-serif"
      },
      "base": {
        "$type": "fontFamily",
        "$value": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
      },
      "mono": { 
        "$type": "fontFamily", 
        "$value": "'JetBrains Mono', 'Fira Code', 'SF Mono', monospace" 
      }
    },
    "size": {
      "xs": { "$type": "dimension", "$value": "0.75rem" },
      "sm": { "$type": "dimension", "$value": "0.8125rem" },
      "base": { "$type": "dimension", "$value": "0.875rem" },
      "md": { "$type": "dimension", "$value": "1rem" },
      "lg": { "$type": "dimension", "$value": "1.125rem" },
      "xl": { "$type": "dimension", "$value": "1.25rem" },
      "2xl": { "$type": "dimension", "$value": "1.5rem" },
      "3xl": { "$type": "dimension", "$value": "1.875rem" },
      "4xl": { "$type": "dimension", "$value": "2.25rem" },
      "5xl": { "$type": "dimension", "$value": "3rem" }
    },
    "lineHeight": {
      "none": { "$type": "number", "$value": 1 },
      "tight": { "$type": "number", "$value": 1.25 },
      "snug": { "$type": "number", "$value": 1.375 },
      "default": { "$type": "number", "$value": 1.5 },
      "relaxed": { "$type": "number", "$value": 1.625 }
    },
    "weight": {
      "regular": { "$type": "number", "$value": 400 },
      "medium": { "$type": "number", "$value": 500 },
      "semibold": { "$type": "number", "$value": 600 },
      "bold": { "$type": "number", "$value": 700 }
    },
    "tracking": {
      "tighter": { "$type": "dimension", "$value": "-0.05em" },
      "tight": { "$type": "dimension", "$value": "-0.025em" },
      "normal": { "$type": "dimension", "$value": "0" },
      "wide": { "$type": "dimension", "$value": "0.025em" }
    }
  },
  "space": {
    "0": { "$type": "dimension", "$value": "0" },
    "px": { "$type": "dimension", "$value": "1px" },
    "0.5": { "$type": "dimension", "$value": "2px" },
    "1": { "$type": "dimension", "$value": "4px" },
    "1.5": { "$type": "dimension", "$value": "6px" },
    "2": { "$type": "dimension", "$value": "8px" },
    "3": { "$type": "dimension", "$value": "12px" },
    "4": { "$type": "dimension", "$value": "16px" },
    "5": { "$type": "dimension", "$value": "20px" },
    "6": { "$type": "dimension", "$value": "24px" },
    "8": { "$type": "dimension", "$value": "32px" },
    "10": { "$type": "dimension", "$value": "40px" },
    "12": { "$type": "dimension", "$value": "48px" },
    "16": { "$type": "dimension", "$value": "64px" },
    "xs": { "$type": "dimension", "$value": "4px" },
    "sm": { "$type": "dimension", "$value": "8px" },
    "md": { "$type": "dimension", "$value": "16px" },
    "lg": { "$type": "dimension", "$value": "24px" },
    "xl": { "$type": "dimension", "$value": "32px" },
    "2xl": { "$type": "dimension", "$value": "48px" }
  },
  "radius": {
    "none": { "$type": "dimension", "$value": "0" },
    "sm": { "$type": "dimension", "$value": "4px" },
    "md": { "$type": "dimension", "$value": "6px" },
    "lg": { "$type": "dimension", "$value": "8px" },
    "xl": { "$type": "dimension", "$value": "12px" },
    "2xl": { "$type": "dimension", "$value": "16px" },
    "full": { "$type": "dimension", "$value": "9999px" }
  },
  "shadow": {
    "xs": { "$type": "shadow", "$value": "0 1px 2px rgba(0, 0, 0, 0.3)" },
    "sm": { "$type": "shadow", "$value": "0 2px 4px rgba(0, 0, 0, 0.3)" },
    "md": { "$type": "shadow", "$value": "0 4px 12px rgba(0, 0, 0, 0.4)" },
    "lg": { "$type": "shadow", "$value": "0 8px 24px rgba(0, 0, 0, 0.5)" },
    "xl": { "$type": "shadow", "$value": "0 16px 48px rgba(0, 0, 0, 0.6)" },
    "glow": { "$type": "shadow", "$value": "0 0 24px rgba(99, 102, 241, 0.25)" }
  },
  "motion": {
    "duration": {
      "instant": { "$type": "dimension", "$value": "50ms" },
      "fast": { "$type": "dimension", "$value": "150ms" },
      "normal": { "$type": "dimension", "$value": "250ms" },
      "slow": { "$type": "dimension", "$value": "400ms" }
    },
    "easing": {
      "standard": { "$type": "cubicBezier", "$value": [0.4, 0, 0.2, 1] },
      "emphasized": { "$type": "cubicBezier", "$value": [0.2, 0, 0, 1] },
      "decelerate": { "$type": "cubicBezier", "$value": [0, 0, 0.2, 1] },
      "accelerate": { "$type": "cubicBezier", "$value": [0.4, 0, 1, 1] }
    }
  },
  "zIndex": {
    "base": { "$type": "number", "$value": 0 },
    "canvas": { "$type": "number", "$value": 10 },
    "toolbar": { "$type": "number", "$value": 100 },
    "dropdown": { "$type": "number", "$value": 200 },
    "overlay": { "$type": "number", "$value": 1000 },
    "modal": { "$type": "number", "$value": 1100 },
    "toast": { "$type": "number", "$value": 1200 }
  },
  "component": {
    "body": {
      "fontSize": { "$type": "dimension", "$value": "{font.size.base}" },
      "lineHeight": { "$type": "number", "$value": "{font.lineHeight.default}" }
    },
    "button": {
      "fontSize": { "$type": "dimension", "$value": "{font.size.sm}" },
      "fontWeight": { "$type": "number", "$value": "{font.weight.medium}" },
      "paddingY": { "$type": "dimension", "$value": "{space.2}" },
      "paddingX": { "$type": "dimension", "$value": "{space.4}" },
      "height": { "$type": "dimension", "$value": "36px" },
      "heightSm": { "$type": "dimension", "$value": "32px" },
      "heightLg": { "$type": "dimension", "$value": "44px" }
    },
    "toolbar": {
      "fontSize": { "$type": "dimension", "$value": "{font.size.sm}" },
      "gap": { "$type": "dimension", "$value": "{space.2}" },
      "paddingY": { "$type": "dimension", "$value": "{space.1}" },
      "paddingX": { "$type": "dimension", "$value": "{space.3}" }
    },
    "input": {
      "height": { "$type": "dimension", "$value": "40px" },
      "paddingX": { "$type": "dimension", "$value": "{space.3}" }
    },
    "card": {
      "padding": { "$type": "dimension", "$value": "{space.5}" },
      "gap": { "$type": "dimension", "$value": "{space.4}" }
    },
    "dashboard": {
      "tableCellPadding": { "$type": "dimension", "$value": "12px 16px" },
      "actionsColumnWidth": { "$type": "dimension", "$value": "140px" }
    }
  }
}
