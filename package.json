{
  "name": "@swarm/monorepo",
  "version": "1.0.0",
  "description": "Unified Swarm Platform: Jarvis (voice/text UI) + Zerg (agent orchestration backend)",
  "private": true,
  "workspaces": [
    "apps/jarvis/apps/*",
    "apps/jarvis/packages/*",
    "apps/jarvis/packages/data/*",
    "apps/zerg/frontend-web",
    "apps/zerg/prerender",
    "packages/*"
  ],
  "scripts": {
    "dev": "make dev",
    "start": "make swarm-dev",
    "jarvis": "make jarvis-dev",
    "zerg": "make zerg-dev",
    "test": "make test",
    "generate-sdk": "make generate-sdk",
    "validate:css": "node scripts/validate-css-classes.js",
    "validate:all": "npm run validate:css && ./scripts/fast-contract-check.sh"
  },
  "devDependencies": {
    "@asyncapi/cli": "^3.1.0",
    "@asyncapi/modelina": "^5.3.1",
    "asyncapi-rust-ws-template": "^0.3.2"
  },
  "overrides": {
    "@types/react": "18.3.24",
    "@types/react-dom": "18.3.7"
  },
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cipher982/zerg.git"
  },
  "keywords": [],
