{
  "$schema": "./models.schema.json",
  "$comment": "Single source of truth for all LLM model configuration across Zerg and Jarvis",

  "text": {
    "$comment": "Text/chat completion models (Zerg agent orchestration)",
    "tiers": {
      "TIER_1": "gpt-5.1",
      "TIER_2": "gpt-5-mini",
      "TIER_3": "gpt-5-nano"
    },
    "mock": "gpt-mock",
    "models": {
      "gpt-5.1": {
        "displayName": "GPT-5.1",
        "provider": "openai",
        "tier": "TIER_1",
        "description": "Best reasoning capability"
      },
      "gpt-5-mini": {
        "displayName": "GPT-5 Mini",
        "provider": "openai",
        "tier": "TIER_2",
        "description": "Good quality, lower cost"
      },
      "gpt-5-nano": {
        "displayName": "GPT-5 Nano",
        "provider": "openai",
        "tier": "TIER_3",
        "description": "Fast and cheap, basic capability"
      },
      "gpt-mock": {
        "displayName": "Mock (testing)",
        "provider": "openai",
        "tier": null,
        "description": "Mock model for unit tests"
      }
    }
  },

  "realtime": {
    "$comment": "Realtime/voice models (Jarvis voice interface)",
    "tiers": {
      "TIER_1": "gpt-4o-realtime-preview",
      "TIER_2": "gpt-4o-mini-realtime-preview"
    },
    "models": {
      "gpt-4o-realtime-preview": {
        "displayName": "GPT-4o Realtime",
        "provider": "openai",
        "tier": "TIER_1",
        "description": "Full capability realtime model"
      },
      "gpt-4o-mini-realtime-preview": {
        "displayName": "GPT-4o Mini Realtime",
        "provider": "openai",
        "tier": "TIER_2",
        "description": "Faster, cheaper realtime model"
      }
    },
    "aliases": {
      "gpt-realtime": "gpt-4o-realtime-preview",
      "gpt-4-realtime": "gpt-4o-realtime-preview"
    },
    "defaultVoice": "verse"
  },

  "useCases": {
    "$comment": "Maps use cases to tiers - quality-critical tasks get TIER_1 even for small outputs",
    "text": {
      "agent_conversation": "TIER_1",
      "routing_decision": "TIER_1",
      "tool_selection": "TIER_1",
      "worker_task": "TIER_2",
      "summarization": "TIER_2",
      "bulk_classification": "TIER_3",
      "ci_test": "TIER_3"
    },
    "realtime": {
      "voice_conversation": "TIER_1",
      "voice_test": "TIER_2"
    }
  },

  "defaults": {
    "text": {
      "agent": "TIER_1",
      "worker": "TIER_2",
      "test": "TIER_3"
    },
    "realtime": {
      "production": "TIER_1",
      "test": "TIER_2"
    }
  }
}
